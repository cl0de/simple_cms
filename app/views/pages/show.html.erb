<div class="container">
<%= link_to("<< Back to list", pages_path, :class => 'badge badge-primary back-link') %>
<div class="pages show">
    <h1>Show Page</h1>
                                            
    <table summary="Page detail view" class="table">
        <tr>
            <th>Subject Name</th>
            <td><%= @page.subject.name if @page.subject %></td>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>
        <tr>
            <th>permalink</th>
            <td><%= @page.permalink %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>
        <tr>
            <th>Visible?</th>
            <td><%= @page.visible ? 'true' : 'false' %></td>
        </tr>
        <tr>
            <th>Content</th>
            <td><%= @page.content %></td>
        </tr>
        <tr>
            <th>Created</th>
            <td><%= @page.created_at %></td>
        </tr>
        <tr>
            <th>Updated</th>
            <td><%= @page.updated_at %></td>
        </tr>
    </table>
</div>
</div>