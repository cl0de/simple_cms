<div class="container">
    <%= link_to("<< Back to list", subjects_path, :class => ' badge badge-primary Back-link') %>

<div class="delete">
    <h1>Delete Subject</h1>
    <br>
    <%= form_for(@subject, :method => 'delete') do |f| %>

    <p class="alert alert-danger" role="alert" >Are you sure you want permenantly delete this subject?</p>
    <p><strong><%= @subject.name %></strong></p>
    <br>
    <div class="form-buttons">
        <%= f.submit("Delete Subject", class: "btn btn-primary") %>
    </div>

    <% end %>
</div>
</div>