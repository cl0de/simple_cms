<% provide(:title, "Edit")  %>
    
    <h1>Update your profile</h1>
    <div class="row">
        <div class="col-6 col-offset-3">
            <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <%= render partial: 'form', :locals =>{:f => f}  %>
            <%= f.submit "Save changes", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
