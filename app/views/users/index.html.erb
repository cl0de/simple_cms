<% provide(:title, "Users" )%>
<h1>All users</h1>

<ul class="users"> 
<% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <%= link_to user.first_name, user %>
    <%= link_to user.last_name, user %>
    <%= link_to user.email, user %>
    <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "Delete", user, method: :delete,
                                            data: {confirm: "Are you sure"} %>
    <% end %>
  </li>
<% end %>
</ul>